{
  "name": "lovvedit",
  "version": "1.0.0",
  "description": "lovvedit's API",
  "main": "src/server.js",
  "private": true,
  "scripts": {
    "start": "node build/server.js",
    "start:dev": "nodemon src/server.js --exec babel-node",
    "prebuild": "yarn run clean",
    "build": "babel src -d build",
    "test": "jest",
    "lint": "eslint src --fix",
    "precoverage": "yarn test",
    "coverage": "codecov",
    "precommit": "lint-staged",
    "clean": "rimraf build"
  },
  "repository": "git@github.com:lovvedit/lovvedit.git",
  "author": "Diego Stratta <strattadb@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=8.4.0"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-eslint": "8.0.0",
    "babel-plugin-dynamic-import-node": "1.1.0",
    "babel-plugin-syntax-export-extensions": "6.13.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.0",
    "babel-plugin-transform-export-extensions": "6.22.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "codecov": "2.3.0",
    "eslint": "4.6.1",
    "eslint-config-airbnb-base": "12.0.0",
    "eslint-config-prettier": "2.4.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-prettier": "2.2.0",
    "husky": "0.14.3",
    "jest": "21.0.2",
    "lint-staged": "4.1.3",
    "nodemon": "1.12.0",
    "prettier": "1.6.1",
    "prettier-eslint": "8.0.0",
    "prettier-eslint-cli": "4.3.2",
    "rimraf": "2.6.2"
  },
  "dependencies": {
    "bcrypt": "1.0.3",
    "graphql": "0.11.3",
    "graphql-server-koa": "1.1.2",
    "graphql-subscriptions": "0.5.0",
    "jsonwebtoken": "8.0.1",
    "kcors": "2.2.1",
    "koa": "2.3.0",
    "koa-bodyparser": "4.2.0",
    "koa-helmet": "3.2.0",
    "koa-logger": "3.0.1",
    "koa-passport": "4.0.0",
    "koa-router": "7.2.1",
    "mongoose": "4.11.11",
    "nodemailer": "4.1.0",
    "passport-jwt": "3.0.0",
    "subscriptions-transport-ws": "0.8.3",
    "validator": "8.2.0",
    "winston": "2.3.1"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "collectCoverage": true
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  }
}
